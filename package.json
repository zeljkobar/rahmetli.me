{
  "name": "rahmetli-me",
  "version": "1.0.0",
  "description": "Prvi bosanski portal za obavještenja o smrti i saučešća",
  "type": "module",
  "main": "backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run frontend:dev\"",
    "server:dev": "cross-env NODE_ENV=development nodemon backend/server.js",
    "frontend:dev": "vite --config vite.config.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build --config vite.config.js",
    "build:backend": "echo 'Backend build complete'",
    "start": "cross-env NODE_ENV=production node backend/server.js",
    "preview": "vite preview --config vite.config.js",
    "db:migrate": "mysql -u root -p < database/schema_v2.sql",
    "db:seed": "node database/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint backend/ frontend/assets/js/ --ext .js",
    "lint:fix": "eslint backend/ frontend/assets/js/ --ext .js --fix"
  },
  "keywords": [
    "memorial",
    "death announcements",
    "bosnia",
    "muslim",
    "obituary",
    "condolences"
  ],
  "author": "Rahmetli.me Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.8",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/rahmetli-me.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/rahmetli-me/issues"
  },
  "homepage": "https://rahmetli.me"
}
